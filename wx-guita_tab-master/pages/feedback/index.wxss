.m-fb {
    background-color: #fff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
}

.m-fb .input {
    height: 70rpx;
    line-height: 70rpx;
    border-bottom: 1px solid #eee;
}

.m-fb .input input {
    padding: 0 10px;
    height: 100%;
}

.m-fb .textarea {
    height: 300rpx;
}

.m-fb .textarea textarea {
    padding: 10px;
}

.btn-wrap {
    margin-top: 60rpx;
    text-align: center;
}

.u-btn {
    width: 600rpx;
    height: 100rpx;
    line-height: 100rpx;
    display: inline-block;
    background-color: #5F98FD;
    color: #fff;
    margin: 0 auto;
}